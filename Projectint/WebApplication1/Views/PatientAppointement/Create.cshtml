@model WebApplication1.Models.Entities.AppointmentModels

@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Layout/LayoutPatient.cshtml";
}
<section class="inner-bg" style="background-color:#04465F">
    <div class="container">
        <div class="row">
            <div class="col-md-4">

            </div>
        </div>
    </div>
</section>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />



    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>jQuery UI Datepicker - Default functionality</title>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
  $( function() {
    $( "#datepicker" ).datepicker();
  } );
    </script>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <br />
        <br />

        <div style="border:solid skyblue;margin:0;padding:0;" class="col-md-4">
            <div style="border:none;" class="tab-pane active" role="tabpanel" id="step1">
                <div>
                    <div class="panel-heading panel-bg"><i class="fa fa-map-o"></i> Prendre un rendez vous  </div>

                    <div class="body">
                        <form>
                            <div>
                                <table>
                                    <tr>
                                        <td><h5 style="display:inline" class="font-2 " style="color:black">Motif Rendez vous</h5></td>
                                        <td>  @Html.DropDownList("Reason", new SelectList(ViewBag.reasons, "value", "Text"), htmlAttributes: new { @class = "btn-group bootstrap-select form-control" })</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <h5 style="display:inline" class="font-2 " style="color:black">date Rendez vous</h5>

                                        </td>
                                        <td>


                                            <div id="datepicker">
                                                @Html.TextBoxFor(model => model.dateAppointmentJEE)
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                    <tr>
                                        <td>
                                            <h5 style="display:inline" class="font-2 " style="color:black">  heure </h5>
                                        </td>
                                        <td>
                                            @Html.DropDownList("Dispo", new SelectList(ViewBag.Dispos, "value", "Text"), htmlAttributes: new { @class = "btn-group bootstrap-select form-control" })


                                        </td>
                                    </tr>

                                    <div class="form-group col-md-6">
                                        <td>
                                            <h5 class="font-2" style="color:black">Message</h5>
                                        </td>
                                        <td>
                                            <div class="contact-textarea">
                                                @Html.TextAreaFor(model => model.message, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </td>

                                    </div>
                                    </tr>
                                </table>

                            </div>

                        </form>


                    </div>
                </div>







                @*<div class="form-group">
                        <h5 class="font-2" style="color:azure">Choose an Hour</h5>
                        @Html.DropDownList("Slot", new SelectList(ViewBag.Dispos, "value", "Text", ViewBag.disponibla), htmlAttributes: new { @class = "btn-group bootstrap-select form-control" })


                    </div>*@



                <center>

                    <div class="col-md-offset-2 col-md-12 ">
                        <input style="width:200px;" type="submit" value="Create" class="btn btn-primary col-md-10" />
                    </div>
                </center>

            </div>


        </div>




    }


</body>
</html>
